{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    // "allowJs": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
